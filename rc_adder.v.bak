module rc_adder (
	input wire [31:0], Ra, Rb, 
	input wire Cin,
	output wire [31:0] Sout,
	output wire Cout);
	
	wire [32:0] c; 

	assign c[0] = Cin; 

	genvar i;
	generate
		for (i = 0; i < 32; i = i + 1) 
		begin : adder_loop
			full_adder fa (
				.sum(sum[i]),
				.Cout(c[i+1]), 
				.Ra(Ra[i]),
				.Rb(Rb[i]),
				.Cin(c[i])     
			);
		end
	endgenerate

	assign cout = c[32];
endmodule
